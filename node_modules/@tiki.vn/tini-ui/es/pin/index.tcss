.tu-pin-label{font-weight:700;margin-bottom:4px;overflow:hidden;text-overflow:ellipsis;white-space:nowrap}.tu-pin-label-disabled{color:var(--gray50);opacity:.6}.tu-pin-blocks{display:flex;margin:0 -4px}.tu-pin-blocks .tu-pin-item{width:40px;height:40px;margin:0 4px;font-size:16px;caret-color:var(--brand)}.tu-pin-blocks .tu-pin-item .t-input-content,.tu-pin-blocks .tu-pin-item-placeholder{text-align:center}.tu-pin-blocks .tu-pin-item-circle{border-radius:50%}.tu-pin-blocks .tu-pin-item-secret{color:var(--gray60)}.tu-pin-blocks .tu-pin-item-secret .t-input-content{text-align:center}.tu-pin-blocks .tu-pin-item-secret .tu-pin-item-placeholder{font-size:16px}.tu-pin-blocks .tu-pin-item-error{border-color:var(--red)}.tu-pin-blocks .tu-pin-item-secret.tu-pin-item-error{color:var(--red)}.tu-pin-blocks .tu-pin-item-hide-caret{caret-color:transparent}.tu-pin-blocks .t-input-disabled .tu-pin-item-placeholder{color:var(--gray50);opacity:.6}.tu-pin-error{margin-top:8px;font-size:12px;color:var(--red)}