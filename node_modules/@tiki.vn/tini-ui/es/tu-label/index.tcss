.tu-label{display:flex;flex-direction:column}.tu-label-inline{display:flex;align-items:center;font-weight:var(--font-weight-bold);font-size:var(--font-size-base);margin-bottom:var(--space-inline-4x-small);color:var(--text-color)}.tu-label-inline-has-helper{margin-bottom:0}.tu-label-inline-disabled{color:var(--text-disabled)}.tu-label-dot{margin-right:var(--space-inline-4x-small)}.tu-label-icon{margin-left:var(--space-inline-4x-small)}.tu-label-helper{font-weight:var(--font-weight-regular);font-size:var(--font-size-small);color:var(--text-content-tertiary);margin-bottom:var(--space-inline-4x-small)}.tu-label-loading{background:rgba(var(--gray50-rgb),.2);border-radius:var(--border-radius-pill);width:80px;margin-bottom:var(--space-inline-4x-small);height:12px}