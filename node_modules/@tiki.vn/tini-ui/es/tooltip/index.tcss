.tu-tooltip{position:relative;width:100%}.tu-tooltip-content{position:absolute;width:fit-content;transform:translateX(-50%);border-radius:4px;padding:4px 8px;font-size:12px}.tu-tooltip-content::before{content:'';position:absolute}.tu-tooltip-content-top{bottom:100%;left:50%;margin-bottom:12px}.tu-tooltip-content-top::before{top:100%;left:50%;transform:translateX(-50%);border-left:4px solid transparent;border-right:4px solid transparent}.tu-tooltip-content-top-light::before{border-top:4px solid #fff}.tu-tooltip-content-top-dark::before{border-top:4px solid var(--gray100)}.tu-tooltip-content-bottom{top:100%;left:50%;margin-bottom:0;margin-top:12px}.tu-tooltip-content-bottom:before{bottom:100%;left:50%;transform:translateX(-50%);border-left:4px solid transparent;border-right:4px solid transparent}.tu-tooltip-content-bottom-light::before{border-bottom:4px solid #fff}.tu-tooltip-content-bottom-dark::before{border-bottom:4px solid var(--gray100)}.tu-tooltip-content-bottom-dark,.tu-tooltip-content-top-dark{background:var(--gray100);color:#fff}.tu-tooltip-content-bottom-light,.tu-tooltip-content-top-light{background:#fff;color:var(--gray100);filter:drop-shadow(0 2px 10px rgba(0, 0, 0, .2))}